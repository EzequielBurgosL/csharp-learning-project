# .editorconfig

# C# Code Style Rules
[*.cs]
# Indentation
indent_style = space
indent_size = 4

# Newlines
insert_final_newline = true

# Code formatting
csharp_new_line_between_members_of_class = always
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_style_var_for_built_in_types = true

# Naming conventions
dotnet_naming_rule.methods_should_be_pascal_case.severity = warning
dotnet_naming_rule.methods_should_be_pascal_case.symbols = methods
dotnet_naming_rule.methods_should_be_pascal_case.style = pascal_case

# Enforce braces for all control statements
csharp_style_braces_for_if_else = always
